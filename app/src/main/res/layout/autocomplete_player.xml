<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:minHeight="@dimen/dropdown_item_min_height"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/player_avatar"
		android:layout_width="@dimen/dropdown_item_min_height"
		android:layout_height="@dimen/dropdown_item_min_height"
		android:scaleType="centerCrop"
		android:src="@drawable/person_image_empty"
		tools:ignore="ContentDescription" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		android:padding="@dimen/padding_standard">

		<TextView
			android:id="@+id/player_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:textAppearance="@style/TextAppearance.Primary"
			tools:text="@tools:sample/first_names" />

		<TextView
			android:id="@+id/player_subtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:textAppearance="@style/TextAppearance.Secondary"
			tools:text="@tools:sample/lorem" />
	</LinearLayout>

</LinearLayout>
