<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:paddingBottom="@dimen/material_margin_vertical"
			  android:paddingLeft="@dimen/material_margin_horizontal"
			  android:paddingRight="@dimen/material_margin_horizontal"
			  android:paddingTop="@dimen/material_margin_vertical">

	<TextView
		android:id="@+id/unRankedView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/Text.Subtitle"
		android:visibility="gone"
		tools:text="Un-ranked Game"
		tools:visibility="visible"/>

	<LinearLayout
		android:id="@+id/subtypesView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:visibility="gone"
		tools:visibility="visible"/>

	<LinearLayout
		android:id="@+id/familiesView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:visibility="gone"
		tools:visibility="visible"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:minHeight="40dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/standardDeviationView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textAppearance="@style/Text.Secondary"
			tools:text="Standard Deviation: 0.123"/>

		<TextView
			android:id="@+id/votesView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:textAppearance="@style/Text.Secondary"
			tools:text="1,234 votes"/>
	</LinearLayout>
</LinearLayout>