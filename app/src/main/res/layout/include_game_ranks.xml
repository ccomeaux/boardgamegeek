<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/CardRow"
	android:layout_width="0dp"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:orientation="horizontal"
	tools:showIn="@layout/fragment_game">

	<ImageView
		android:id="@+id/ranksIcon"
		style="@style/Icon"
		android:background="?attr/selectableItemBackgroundBorderless"
		android:clickable="true"
		android:contentDescription="@string/rank"
		android:focusable="true"
		android:src="@drawable/ic_baseline_emoji_events_24" />

	<LinearLayout
		android:id="@+id/rankContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:descendantFocusability="blocksDescendants"
		android:focusable="true"
		android:gravity="center_vertical"
		android:orientation="vertical">

		<TextView
			android:id="@+id/rankView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/Text.Primary"
			tools:text="#42 Board Game" />

		<TextView
			android:id="@+id/subtypeView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/Text.Secondary"
			android:visibility="gone"
			tools:text="#34 Strategy"
			tools:visibility="visible" />
	</LinearLayout>
</LinearLayout>

